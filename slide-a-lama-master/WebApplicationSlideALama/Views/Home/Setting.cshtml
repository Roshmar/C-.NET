@model SlideALamaModels
@{
    ViewData["Title"] = "Setting";
}
<link href="~/css/SiteShablon.css" rel="stylesheet" />
<link href="~/css/Setting.css" rel="stylesheet" />

@{ 
    var gameMode = Model.gameMode;
<div id="Setting">
    <div class="container justify-content-between">
        
            <form name="SetiingForm" asp-controller="Home" asp-action="Setting"  method="post">
                <div class="row">
                    <div class="col Player">
                        <h1> First Player</h1>
                        <label for="inputNameFirstPlayer" class="h5">Name:</label>
                        <input type="text" id="inputNameFirstPlayer" value="" name="inputNameFirstPlayer" />
                        <div id="FirstPlayerIcon" style="background-image:@(gameMode.Get_IconFirstPlayer())"></div>
                        <h3 id="NameFirstPlayer" style="color:@(gameMode.Get_firstplayerColor());">@(gameMode.Get_nameOfFirstPlayer())</h3>
                            <section class="card">
                                <div class="card--content"><div class="img " style="background-image:url('../img/PlayerIcon.png')" onclick="changePlayerIcon(1,0)"><input name="IconFirstPlayer" type="radio" value="url('../img/PlayerIcon.png')"></div></div>
                                <div class="card--content"><div class="img " style="background-image:url('../img/PlayerIcon1.png')" onclick="changePlayerIcon(1,1)"><input name="IconFirstPlayer" type="radio" value="url('../img/PlayerIcon1.png')"></div></div>
                                <div class="card--content"><div class="img " style="background-image:url('../img/PlayerIcon2.png')" onclick="changePlayerIcon(1,2)"><input name="IconFirstPlayer" type="radio" value="url('../img/PlayerIcon2.png')"></div></div>
                                <div class="card--content"><div class="img " style="background-image:url('../img/PlayerIcon3.png')" onclick="changePlayerIcon(1,3)"><input name="IconFirstPlayer" type="radio" value="url('../img/PlayerIcon3.png')"></div></div>
                                <div class="card--content"><div class="img " style="background-image:url('../img/PlayerIcon4.png')" onclick="changePlayerIcon(1,4)"><input name="IconFirstPlayer" type="radio" value="url('../img/PlayerIcon4.png')"></div></div>
                                <div class="card--content"><div class="img " style="background-image:url('../img/PlayerIcon5.png')" onclick="changePlayerIcon(1,5)"><input name="IconFirstPlayer" type="radio" value="url('../img/PlayerIcon5.png')"></div></div>
                            </section>
                            <section class="card">
                                <div class="card--content"><div class="color " style="background-color:red;" onclick="changeColorText(1, 'red');"><input name="ColorFirstPlayer" type="radio" value="red"></div></div>
                                <div class="card--content"><div class="color " style="background-color:yellow" onclick="changeColorText(1, 'yellow');"><input name="ColorFirstPlayer" type="radio" value="yellow"></div></div>
                                <div class="card--content"><div class="color " style="background-color:green" onclick="changeColorText(1, 'green');"><input name="ColorFirstPlayer" type="radio" value="green"></div></div>
                                <div class="card--content"><div class="color " style="background-color:white" onclick="changeColorText(1, 'white');"><input name="ColorFirstPlayer" type="radio" value="white"></div></div>
                                <div class="card--content"><div class="color " style="background-color:blue " onclick="changeColorText(1, 'blue');"><input name="ColorFirstPlayer" type="radio" value="blue"></div></div>
                                <div class="card--content"><div class="color" style="background-color:mediumvioletred" onclick="changeColorText(1, 'mediumvioletred');"><input name="ColorFirstPlayer" type="radio" value="mediumvioletred"></div></div>
                                <div class="card--content"><div class="color " style="background-color:orange" onclick="changeColorText(1, 'orange');"><input name="ColorFirstPlayer" type="radio" value="orange"></div></div>
                                <div class="card--content"><div class="color " style="background-color:lightgreen" onclick="changeColorText(1, 'lightgreen');"><input name="ColorFirstPlayer" type="radio" value="lightgreen"></div></div>
                                <div class="card--content"><div class="color " style="background-color:lightslategray" onclick="changeColorText(1, 'lightslategray');"><input name="ColorFirstPlayer" type="radio" value="lightslategray"></div></div>
                                <div class="card--content"><div class="color " style="background-color:brown" onclick="changeColorText(1, 'brown');"><input name="ColorFirstPlayer" type="radio" value="brown"></div></div>
                            </section>
                    </div>
                    <div class="col Player">
                        <h1> Second Player</h1>
                        <label for="inputNameSecondPlayer" class="h5">Name:</label>
                        <input type="text" id="inputNameSecondPlayer" value="" name="inputNameSecondPlayer" />
                        <div id="SecondPlayerIcon" style="background-image:@(gameMode.Get_IconSecondPlayer())"></div>
                        <h3 id="NameSecondPlayer" style="color:@(gameMode.Get_secondplayerColor());">@(gameMode.Get_nameOfSecondPlayer())</h3>
                        <section class="card">
                            <div class="card--content"><div class="img " style="background-image:url('../img/PlayerIcon.png')" onclick="changePlayerIcon(2,0)"><input name="IconSecondPlayer" type="radio" value="url('../img/PlayerIcon.png')"></div></div>
                            <div class="card--content"><div class="img " style="background-image:url('../img/PlayerIcon1.png')" onclick="changePlayerIcon(2,1)"><input name="IconSecondPlayer" type="radio" value="url('../img/PlayerIcon1.png')"></div></div>
                            <div class="card--content"><div class="img " style="background-image:url('../img/PlayerIcon2.png')" onclick="changePlayerIcon(2,2)"><input name="IconSecondPlayer" type="radio" value="url('../img/PlayerIcon2.png')"></div></div>
                            <div class="card--content"><div class="img " style="background-image:url('../img/PlayerIcon3.png')" onclick="changePlayerIcon(2,3)"><input name="IconSecondPlayer" type="radio" value="url('../img/PlayerIcon3.png')"></div></div>
                            <div class="card--content"><div class="img " style="background-image:url('../img/PlayerIcon4.png')" onclick="changePlayerIcon(2,4)"><input name="IconSecondPlayer" type="radio" value="url('../img/PlayerIcon4.png')"></div></div>
                            <div class="card--content"><div class="img " style="background-image:url('../img/PlayerIcon5.png')" onclick="changePlayerIcon(2,5)"><input name="IconSecondPlayer" type="radio" value="url('../img/PlayerIcon5.png')"></div></div>
                        </section>
                        <section class="card">
                            <div class="card--content"><div class="color " style="background-color:red;" onclick="changeColorText(2, 'red');"><input name="ColorSecondPlayer" type="radio" value="red"></div></div>
                            <div class="card--content"><div class="color " style="background-color: yellow" onclick="changeColorText(2, 'yellow');"><input name="ColorSecondPlayer" type="radio" value="yellow"></div></div>
                            <div class="card--content"><div class="color " style="background-color:green" onclick="changeColorText(2, 'green');"><input name="ColorSecondPlayer" type="radio" value="green"></div></div>
                            <div class="card--content"><div class="color " style="background-color:white" onclick="changeColorText(2, 'white');"><input name="ColorSecondPlayer" type="radio" value="white"></div></div>
                            <div class="card--content"><div class="color " style="background-color:blue " onclick="changeColorText(2, 'blue');"><input name="ColorSecondPlayer" type="radio" value="blue"></div></div>
                            <div class="card--content"><div class="color" style="background-color:mediumvioletred" onclick="changeColorText(2, 'mediumvioletred');"><input name="ColorSecondPlayer" type="radio" value="mediumvioletred"></div></div>
                            <div class="card--content"><div class="color " style="background-color:orange" onclick="changeColorText(2, 'orange');"><input name="ColorSecondPlayer" type="radio" value="orange"></div></div>
                            <div class="card--content"><div class="color " style="background-color:lightgreen" onclick="changeColorText(2, 'lightgreen');"><input name="ColorSecondPlayer" type="radio" value="lightgreen"></div></div>
                            <div class="card--content"><div class="color " style="background-color:lightslategray" onclick="changeColorText(2, 'lightslategray');"><input name="ColorSecondPlayer" type="radio" value="lightslategray"></div></div>
                            <div class="card--content"><div class="color " style="background-color:brown" onclick="changeColorText(2, 'brown');"><input name="ColorSecondPlayer" type="radio" value="brown"></div></div>
                        </section>
                    </div>
                </div>
                <div class="row justify-content-md-center">
                    <div class="col align-self-center justify-content-md-center">
                        <button type="submit" style=" border: solid 3px rgba(121,68,34,1);border-radius: 8px; background-color: rgba(242,213,119,1); align-items: center;width:70px;">Submit</button>
                    </div>
                    <div class="col align-self-center justify-content-md-center">
                        <button asp-controller="Home" asp-action="ChooseGameMode" style=" border: solid 3px rgba(121,68,34,1);border-radius: 8px; background-color: rgba(242,213,119,1);text-decoration:none;color:black;align-items: center;width:70px;">Exit</button>
                    </div>
                </div>
                </form>
        
    </div>
</div>
    }

<script src="~/js/Setting.js"></script>